<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true"

    tools:context="cn.com.greatchef.activity.ChangePasswordActivity">

    <include
        android:id="@+id/changepasswd_head"
        layout="@layout/head_view"/>

    <TextView
        android:id="@+id/changepasswd_oldtext"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@+id/changepasswd_head"
        android:layout_marginLeft="21dp"
        android:gravity="center|left"
        android:text="@string/change_passwd_old"
        android:textSize="13sp"/>

    <RelativeLayout
        android:id="@+id/change_old_view"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/changepasswd_oldtext"
        android:background="@color/white">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@mipmap/my_setup_modifypassword"/>

        <EditText
            android:inputType="textPassword"
            android:digits="@string/pwd_standard"
            android:textSize="14sp"
            android:id="@+id/change_old_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:background="@null"
            android:hint="@string/change_passwd_old_hint"
            android:maxLength="16"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/changepasswd_new_text"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@+id/change_old_view"
        android:layout_marginLeft="21dp"
        android:gravity="center|left"
        android:text="@string/change_passwd_old_new"
        android:textSize="13sp"/>

    <RelativeLayout
        android:id="@+id/chenge_oldview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/changepasswd_new_text"
        android:background="@color/white">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@mipmap/my_setup_modifypassword"/>

        <EditText
            android:inputType="textPassword"
            android:digits="@string/pwd_standard"
            android:textSize="14sp"
            android:id="@+id/change_new_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:background="@null"
            android:hint="@string/change_passwd_old_new_hint"
            android:maxLength="16"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/changepasswd_newtext"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@+id/chenge_oldview"
        android:layout_marginLeft="21dp"
        android:gravity="center|left"
        android:text="@string/change_passwd_old_new"
        android:textSize="13sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/changepasswd_newtext"
        android:background="@color/white">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@mipmap/my_setup_modifypassword"/>

        <EditText
            android:inputType="textPassword"
            android:textSize="14sp"
            android:digits="@string/pwd_standard"
            android:id="@+id/change_new_et2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:background="@null"
            android:hint="@string/change_passwd_old_new2"
            android:maxLength="16"/>
    </RelativeLayout>

</RelativeLayout>

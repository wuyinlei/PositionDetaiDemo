<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="cn.com.greatchef.activity.LoginActivity">

    <TextView
        android:id="@+id/login_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="@string/login_quit"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginTop="62dp"
        android:background="@mipmap/register_toppic_en" />

    <TextView
        android:id="@+id/login_login_text"
        android:layout_width="156dp"
        android:layout_height="17dp"
        android:layout_below="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/login_slogn"
        android:textSize="11sp" />

    <RelativeLayout
        android:id="@+id/login_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_login_text"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rect_gray">

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="22.5dp"
            android:background="@null"
            android:hint="@string/login_name"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#b4b4b4"
            android:textSize="13sp" />

        <View
            android:id="@+id/view6"
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:layout_below="@+id/login_name"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:background="#efefef" />

        <EditText
            android:id="@+id/login_passwd"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_below="@+id/login_name"
            android:layout_marginLeft="22.5dp"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:digits="@string/pwd_standard"
            android:hint="@string/login_passwd"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#b4b4b4"
            android:textSize="13sp"
            android:layout_toLeftOf="@+id/login_forget"
            android:layout_toStartOf="@+id/login_forget" />

        <TextView
            android:id="@+id/login_forget"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignEnd="@+id/view6"
            android:layout_alignRight="@+id/view6"
            android:layout_alignTop="@+id/login_passwd"
            android:gravity="center"
            android:text="@string/login_forget_passwd"
            android:textColor="#ad8748"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/login_recode_id"
            android:layout_width="wrap_content"
            android:layout_height="47.5dp"
            android:layout_marginTop="95.5dp"
            android:visibility="gone">

            <View
                android:layout_width="285dp"
                android:layout_height="1dp"
                android:layout_marginLeft="22.5dp"
                android:layout_marginRight="22.5dp"
                android:background="#efefef" />

            <EditText
                android:id="@+id/login_recode"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="22.5dp"
                android:background="@null"
                android:hint="@string/login_regist_code"
                android:maxLength="4"
                android:singleLine="true"
                android:textColorHint="#b4b4b4"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/login_recode_image"
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:scaleType="fitXY"
                android:src="@mipmap/def" />
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/login_center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rect_black"
        android:gravity="center"
        android:text="@string/login_login"
        android:textColor="@color/reg_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/login_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/login_regist"
        android:textColor="#ad8748"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/login_by_other"
        android:textColor="#b4b4b4"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/login_other_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/login_wx"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/login_other_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:text="@string/login_qq"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_other_wb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/weibo"
                    android:id="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:text="@string/login_wb"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_other_fb"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:text="@string/login_fb" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <cn.com.greatchef.customview.CircleImageView
            android:id="@+id/iv_heading"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/morentouxiang" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/iv_heading"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text="赵勇"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/serach_isauth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_name"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/my_authentication_selected"
            android:gravity="center"
            android:text="@string/yes"
            android:textColor="#ad8748"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/tv_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text="江苏吴江万丽酒店行政总厨"
            android:textColor="#b4b4b4"
            android:textSize="13sp" />

        <Button
            android:id="@+id/bt_attention"
            android:layout_width="69dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/addfollow"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:background="#efefef" />
    </RelativeLayout>
</RelativeLayout>
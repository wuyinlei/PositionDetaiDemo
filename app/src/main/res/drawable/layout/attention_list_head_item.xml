<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#efefef">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:text="@string/more_attention"
            android:textColor="#000000" />


        <View
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:background="@drawable/shape_emotion_wight" />

        <cn.com.greatchef.customview.CircleImageView
            android:id="@+id/rv_iv1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="301dp"
            android:src="@drawable/login_logo_hdpi" />


        <View
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="281dp"
            android:background="@drawable/shape_emotion_wight" />

        <cn.com.greatchef.customview.CircleImageView
            android:id="@+id/rv_iv2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="282dp"
            android:src="@drawable/login_logo_hdpi" />

        <View
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="263dp"
            android:background="@drawable/shape_emotion_wight" />

        <cn.com.greatchef.customview.CircleImageView
            android:id="@+id/rv_iv3"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="264dp"

            android:src="@drawable/login_logo_hdpi" />


        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@mipmap/dynamic_friendrecommend" />

    </RelativeLayout>


</RelativeLayout>
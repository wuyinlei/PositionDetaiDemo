<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_emotion_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_emotion_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"></android.support.v4.view.ViewPager>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="30dp"
            android:background="#f4f4f4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">


                <View
                    android:id="@+id/view_one"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/shape_emotion_black" />

                <View
                    android:id="@+id/view_two"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_emotion_gray" />


                <View
                    android:id="@+id/view_three"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_emotion_gray" />

                <View
                    android:id="@+id/view_four"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_emotion_gray" />

                <View
                    android:id="@+id/view_five"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_emotion_gray" />

                <View
                    android:id="@+id/view_six"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_emotion_gray" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
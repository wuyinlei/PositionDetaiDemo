<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_topic"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/zhuanti"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="2015年主题餐饮经营创新的6大策略"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="invisible"

            />

        <RelativeLayout
            android:id="@+id/tv_topic_view"
            android:layout_width="96dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:layout_marginTop="10dp"
            android:background="#ad8748">

            <TextView
                android:id="@+id/tv_topic_stitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="专题专题"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tv_topic_stitle"
                android:text="|"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_topic_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tv_line"
                android:text="03.12"
                android:textColor="#ffffff"
                android:textSize="10sp" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
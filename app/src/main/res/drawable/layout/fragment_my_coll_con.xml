<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="cn.com.greatchef.fragment.MyCollConFragment">

    <com.android.pulltorefresh.PullToRefreshLayout
        android:id="@+id/mycollconfragment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp">

        <com.android.pulltorefresh.PullableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#AAA"
            android:dividerHeight="5dp"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:verticalSpacing="1dp" />

    </com.android.pulltorefresh.PullToRefreshLayout>

    <RelativeLayout
        android:id="@+id/null_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ImageView
            android:layout_width="52dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:src="@mipmap/my_word" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="202dp"
            android:text="@string/no_coll_con"
            android:textColor="#d4d4d4"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/greatchef" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/my_fragmentcon_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/greatchef"
        android:visibility="gone" />
</FrameLayout>

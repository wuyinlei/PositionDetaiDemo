<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.greatchef.fragment.MyCollZuoFragment">

    <cn.com.greatchef.customview.GridViewWithHeaderAndFooter
        android:id="@+id/myscrollfragment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:numColumns="3" />
    <!--android:dividerHeight="1dp"-->
    <RelativeLayout
        android:id="@+id/null_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:src="@mipmap/my_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="202dp"
            android:text="@string/no_coll_zuo"
            android:textColor="#d4d4d4"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/greatchef" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/my_fragmentzuo_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/greatchef"
        android:visibility="gone" />

</FrameLayout>

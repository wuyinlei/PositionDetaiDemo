<?xml version="1.0" encoding="utf-8"?>
<com.android.album2yc.view.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7A263"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/ic_camera_pick"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/photo_icon_takephoto"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_camera_pick"
        android:layout_centerHorizontal="true"
        android:text="@string/photo_take"
        android:textColor="@color/white"
        android:textSize="15sp"/>

</com.android.album2yc.view.SquareRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="21dp"
    android:orientation="vertical">

    <View
        android:id="@+id/list_item_exprience_view"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:background="#d4d4d4" />
    <!--android:layout_marginTop="6dp"-->
    <!--android:layout_alignTop="@+id/list_item_exprience_text"-->
    <TextView
        android:id="@+id/list_item_exprience_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:minHeight="18dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:id="@+id/list_item_exprience_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/list_item_exprience_text"
        android:layout_marginLeft="45dp"
        android:background="#efefef" />

</RelativeLayout>
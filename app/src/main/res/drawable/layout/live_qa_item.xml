<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_qa_all_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/live_4_qa_has"
        android:visibility="gone">

        <View
            android:id="@+id/live_4_qa_new_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="#efefef" />

        <TextView
            android:id="@+id/New"
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:layout_below="@+id/live_4_qa_new_view"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:text="最新问题"
            android:textColor="#ad8748"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/live_4_qa_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/live_4_qa_topview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/live_question_quotes_left" />

            <TextView
                android:id="@+id/live_biaozhi"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="主播会选择热门问题进行回答哦～"
                android:textColor="#9b9b9b"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/live_question_quotes_right" />

        </LinearLayout>

        <TextView
            android:id="@+id/headeTitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/live_4_qa_topview_1"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:text="热门问题"
            android:textColor="#ad8748"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/null_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/relativeLayout"
        android:layout_toRightOf="@+id/relativeLayout"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/live_question_quotes_left" />

            <TextView
                android:id="@+id/live_biaozhi1"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="主播会选择热门问题进行回答哦～"
                android:textColor="#9b9b9b"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/live_question_quotes_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/qa_noquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"

                android:background="@mipmap/live_noquestion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:text="快来提问吧~"
                android:textColor="#b6b6b6"
                android:textSize="14sp" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/live_4_qa_has"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <cn.com.greatchef.customview.CircleImageView
            android:id="@+id/live_4_qa_headimg"
            android:layout_width="34.6dp"
            android:layout_height="34.6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/greatchef1" />

        <TextView
            android:id="@+id/live_4_qa_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.4dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/live_4_qa_headimg"
            android:text="NAme"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_4_qa_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@+id/live_4_qa_name"
            android:text="| time"
            android:textColor="#b4b4b4"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/live_4_qa_unit"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/live_4_qa_name"
            android:layout_alignStart="@+id/live_4_qa_name"
            android:layout_below="@+id/live_4_qa_name"
            android:text="@string/unit"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/live_4_qa_question_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/live_4_qa_name"
            android:layout_alignStart="@+id/live_4_qa_name"
            android:layout_below="@+id/live_4_qa_unit"
            android:layout_marginRight="12dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/live_4_qa_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/hot_radus"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="热门"
                android:textColor="#b6945c"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/live_4_qa_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/live_4_qa_hot"
                android:layout_alignBottom="@+id/live_4_qa_hot"
                android:text="发生了对方啊善良的放发啥浪费拉风啊啦法律啊法律啊善良的饭啊啦, string发动妇女的纪念封卡德罗夫阿克拉姆弗拉索夫离开unit"
                android:textColor="#4a4a4a"
                android:textSize="15sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/live_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/live_4_qa_likenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_toLeftOf="@+id/live_4_qa_like"
            android:maxLength="5"
            android:maxLines="1"
            android:text="00011"
            android:textColor="#9b9b9b"
            android:textSize="11sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:id="@+id/animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞过啦~"
            android:textColor="#ad8748"
            android:textSize="11dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/live_4_qa_like"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="25dp"
            android:padding="5dp" />
        </RelativeLayout>

        <View
            android:id="@+id/live_4_qa_dev"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/live_4_qa_question_"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="13dp"
            android:background="#efefef" />


        <RelativeLayout
            android:id="@+id/live_4_qa_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/live_4_qa_dev"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="12dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/live_4_qa_reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:Nam发生的楼房马上离开地面反馈啦免费开放老妈发来看什么地方来看啊等罗斯福立刻马上打开浪费 劳动模范了卡买的饭旅客免费的离开e"
                android:textSize="14sp" />

            <!--<TextView-->
                <!--android:id="@+id/live_4_qa_reply_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Name:"-->
                <!--android:textColor="#AD8748"-->
                <!--android:textSize="14sp" />-->


            <!--<TextView-->
                <!--android:id="@+id/live_4_qa_reply_con"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toRightOf="@+id/live_4_qa_reply_name"-->
                <!--android:text="Nam发生的楼房马上离开地面反馈啦免费开放老妈发来看什么地方来看啊等罗斯福立刻马上打开浪费 劳动模范了卡买的饭旅客免费的离开e"-->
                <!--android:textColor="#9b9b9b"-->
                <!--android:textSize="14sp" />-->

            <View
                android:id="@+id/live_4_qa_replydev"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/live_4_qa_reply_name"
                android:layout_marginTop="6dp"
                android:background="#efefef" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

    <cn.com.greatchef.customview.CircleImageView
        android:id="@+id/my_follow_list_headimg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:src="@drawable/ic_camera_n"/>

    <TextView
        android:id="@+id/my_follow_list_name"
        android:singleLine="true"
        android:layout_marginRight="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/my_follow_list_headimg"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/my_follow_list_where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_follow_list_name"
        android:layout_alignStart="@+id/my_follow_list_name"
        android:layout_below="@+id/my_follow_list_name"
        android:layout_marginBottom="17dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="90dp"
        android:textColor="#b4b4b4"
        android:textSize="12sp"/>

    <CheckBox
        android:id="@+id/my_follow_list_box"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:background="@drawable/follow_fans_check_selector"
        android:button="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#efefef"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:background="@mipmap/my_card"
    >

    <RelativeLayout
        android:id="@+id/my_idcard_headpic"
        android:layout_width="81dp"
        android:layout_height="184dp"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:src="@mipmap/my_card_head"/>

        <cn.com.greatchef.customview.CircleImageView
            android:id="@+id/my_idcard_headpic_view"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginLeft="6dp"
            android:background="@mipmap/morentouxiang"
            android:layout_marginTop="6dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/my_idcard_headpic_view"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/my_idcard_reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/no"
                android:textColor="#ad8748"
                android:textSize="11sp"/>

            <ImageView
                android:layout_marginLeft="4dp"
                android:id="@+id/my_idcard_reg_img"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@mipmap/my_authentication_normal"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/my_idcard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="61.3dp"
        android:layout_toRightOf="@+id/my_idcard_headpic"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="130dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17sp"/>

    <View
        android:id="@+id/my_idcard_view"
        android:layout_width="1dp"
        android:layout_height="11dp"
        android:layout_alignBottom="@+id/my_idcard_name"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8.5dp"
        android:layout_toRightOf="@+id/my_idcard_name"
        android:background="#d8d8d8"
        />

    <TextView
        android:id="@+id/my_idcard_zhiwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="80dp"
        android:layout_alignBottom="@+id/my_idcard_view"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="39dp"
        android:layout_toRightOf="@+id/my_idcard_view"
        android:singleLine="true"
        android:text=""
        android:textColor="#9b9b9b"
        android:textSize="11sp"/>

    <TextView
        android:textColor="#b4b4b4"
        android:id="@+id/my_idcard_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_idcard_name"
        android:layout_alignStart="@+id/my_idcard_name"
        android:layout_below="@+id/my_idcard_name"
        android:layout_marginRight="39dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""/>

    <ImageView
        android:id="@+id/my_idcard_locimg"
        android:layout_width="8.5dp"
        android:layout_height="11dp"
        android:layout_alignLeft="@+id/my_idcard_name"
        android:layout_alignStart="@+id/my_idcard_name"
        android:layout_below="@+id/my_idcard_address"
        android:layout_marginTop="11dp"
        android:background="@mipmap/my_card_address"/>

    <TextView
        android:textSize="11sp"
        android:id="@+id/my_idcard_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:layout_marginLeft="18dp"
        android:layout_alignLeft="@+id/my_idcard_locimg"
        android:layout_below="@+id/my_idcard_address"
        />
</RelativeLayout>
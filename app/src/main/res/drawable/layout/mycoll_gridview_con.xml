<?xml version="1.0" encoding="utf-8"?>
<com.android.album2yc.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mycoll_grid_con"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/zi_xun"
            android:listSelector="@android:color/transparent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/mycoll_grid_con_dragview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/photo_drafts" />

                <TextView
                    android:text="@string/myproduct_draf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.android.album2yc.view.SquareRelativeLayout>


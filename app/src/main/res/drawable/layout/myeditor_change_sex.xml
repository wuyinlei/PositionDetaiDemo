<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/myeditor_change_sex_pop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RadioGroup
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/white"
        android:id="@+id/myeditor_changesex_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <RadioButton
            android:id="@+id/myeditor_changesex_pop_m"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:button="@null"
            android:text="@string/myeditor_sex_man"
            android:drawableRight="@drawable/sex_selector"
            android:textColor="@drawable/text_color_click"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="#efefef"
            />

         <RadioButton
            android:id="@+id/myeditor_changesex_pop_w"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="21dp"
            android:button="@null"
            android:text="@string/myeditor_sex_woman"
            android:drawableRight="@drawable/sex_selector"
            android:textColor="@drawable/text_color_click"/>


    </RadioGroup>
</RelativeLayout>
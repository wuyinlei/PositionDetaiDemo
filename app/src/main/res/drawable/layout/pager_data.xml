<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sc_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="@string/unit"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_marginRight="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="巴黎莱浮士皇家蒙索酒店"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_duty_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="@string/position"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginRight="21dp"
                    android:id="@+id/tv_duty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="行政总厨"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="@string/cusion"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginRight="21dp"
                    android:id="@+id/tv_cusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="菜系"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:background="#efefef" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="@string/live"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginRight="21dp"
                    android:id="@+id/tv_now_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="辽宁省 铁岭市"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="@string/hometown"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginRight="21dp"
                    android:id="@+id/tv_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="上海"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="19dp"
                    android:text="@string/experience"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />


                <ListView
                    android:id="@+id/lv_experience"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="4dp"
                    android:background="#ffffff"
                    android:divider="#efefef"
                    android:dividerHeight="1dp"></ListView>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
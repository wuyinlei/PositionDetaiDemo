<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/myeditor_changerole_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/white"
        android:gravity="center">

        <RadioButton
            android:id="@+id/myeditor_changerole_pop_1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:button="@null"
            android:drawableRight="@drawable/sex_selector"
            android:text="@string/regist_role_1"
            android:textColor="@drawable/text_color_click" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="#efefef" />

        <RadioButton
            android:id="@+id/myeditor_changerole_pop_2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:button="@null"
            android:drawableRight="@drawable/sex_selector"
            android:text="@string/regist_role_2"
            android:textColor="@drawable/text_color_click" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="#efefef" />

        <RadioButton
            android:id="@+id/myeditor_changerole_pop_3"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:button="@null"
            android:drawableRight="@drawable/sex_selector"
            android:text="@string/regist_role_3"
            android:textColor="@drawable/text_color_click" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:background="#efefef" />

        <RadioButton
            android:id="@+id/myeditor_changerole_pop_4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:button="@null"
            android:drawableRight="@drawable/sex_selector"
            android:text="@string/regist_role_4"
            android:textColor="@drawable/text_color_click" />


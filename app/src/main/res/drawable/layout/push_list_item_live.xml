<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/push_list_item_live_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="11dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <cn.com.greatchef.customview.CircleImageView
        android:id="@+id/push_list_item_live_headpic"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:background="@mipmap/home_live_head"
        android:padding="3dp" />

    <ImageView
        android:id="@+id/push_list_item_live_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/home_live_dongcidaci" />

    <TextView
        android:layout_marginRight="8dp"
        android:id="@+id/push_list_item_live_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/push_list_item_live_status"
        android:layout_toRightOf="@+id/push_list_item_live_headpic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/push_list_item_live_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/push_list_item_live_title"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/push_list_item_live_headpic"
        android:maxLines="2"
        android:layout_marginRight="11dp"
        android:text=""
        android:textColor="#9b9b9b"
        android:textSize="11sp" />

    <TextView
        android:layout_marginRight="9dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/push_list_item_live_timeorplayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/push_list_item_live_person"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="1dp"
        android:maxLines="2"
        android:layout_toRightOf="@+id/push_list_item_live_headpic"
        android:text=""
        android:textColor="#9b9b9b"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/push_list_item_live_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/live_state_bgcolor_ing"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="正在直播"
        android:textColor="@color/white"
        android:textSize="11sp" />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp">

        <TextView

            android:id="@+id/tv_over_commment"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="220dp"
            android:text="剩余"
            android:textColor="#ad8748"
            android:textSize="11sp" />

        <TextView


            android:id="@+id/tv_over_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_over_commment"
            android:text="10"
            android:textColor="#ad8748"
            android:textSize="11sp" />

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_over_count"
            android:text="条回复"
            android:textColor="#ad8748"
            android:textSize="11sp" />


        <ImageView

            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/login_icon_back" />


    </RelativeLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/saysth_vvview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"

            android:background="#f4f4f4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#f4f4f4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/saysth_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:background="#f4f4f4"
                    android:text="@string/login_quit"
                    android:textColor="#000000"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/saysth_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="14dp"
                    android:background="#f4f4f4"
                    android:text="@string/send"
                    android:textColor="#ad8748"
                    android:textSize="15sp" />

            </RelativeLayout>

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_gravity="center_horizontal"
                android:background="#f4f4f4">

                <cn.com.greatchef.customview.ContainsEmojiEditText
                    android:id="@+id/saysth_con"
                    android:layout_width="332dp"
                    android:layout_height="98dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="top|left"
                    android:hint="@string/mycenter_saysth"
                    android:paddingLeft="8dp"
                    android:paddingTop="11dp"
                    android:textColorHint="#b4b4b4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_emtion"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="34dp"
                    android:background="@mipmap/food_face"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="10sp" />

            </FrameLayout>


        </LinearLayout>

        <include
            android:id="@+id/emotion_show"
            layout="@layout/emotion_show_bord" />
    </LinearLayout>
</RelativeLayout>
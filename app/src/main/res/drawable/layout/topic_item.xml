<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/zhuanti" />

        <cn.com.greatchef.customview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="46dp"

            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="212dp"
            android:src="@drawable/login_logo_hdpi" />

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_head"
            android:layout_marginRight="21dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="送久信阳" />

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_food"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text="煮白芦笋荷兰汁或黄油汁荷兰汁荷兰汁"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="0"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_zan_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/tv_zan"
            android:text="@string/zan"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/tv_zan_font"
            android:text=" 0"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_comment_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/tv_comment"
            android:text="@string/comment"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="318dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/fooddetails_line" />


    </RelativeLayout>


</LinearLayout>
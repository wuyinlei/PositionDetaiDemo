<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
        android:enabled="false"
        android:gravity="center"
        android:background="@drawable/upload2_circle_bg"
        android:id="@+id/upload2_contentlist_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:text="10"
        android:textColor="@drawable/upload2_circle_text"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/upload2_contentlist_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:layout_marginLeft="12dp"
        android:background="@null"
        android:ems="10"
        android:hint="@string/upload2_write_step"
        android:paddingRight="10dp"
        android:textColorHint="#b4b4b4"
        android:textColor="#303030"
        android:textSize="14sp"/>
    <!--android:height="44dp"-->

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:visibility="gone"

        >

        <LinearLayout
            android:id="@+id/rl_blank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#80000000"
            android:clickable="true"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f4f4f4"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#f4f4f4"
                android:clickable="true">

                <RelativeLayout
                    android:id="@+id/rl_dialog_cancle"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bt_cancle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:background="#f4f4f4"
                        android:text="@string/myeditor_open_dissmiss"
                        android:textColor="#000000"

                        android:textSize="15sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/bt_submit_commnet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="14dp"

                    android:background="#f4f4f4"
                    android:text="@string/send"
                    android:textColor="#ad8748"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bt_submit_commnet_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:background="#f4f4f4"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/send"

                    android:textColor="#ad8748"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bt_submit_commnet_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:background="#f4f4f4"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/send"
                    android:textColor="#ad8748"


                    android:textSize="15sp" />
            </RelativeLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_gravity="center_horizontal"
                android:background="#f4f4f4">

                <cn.com.greatchef.customview.ContainsEmojiEditText
                    android:id="@+id/et_comment_big"
                    android:layout_width="332dp"
                    android:layout_height="98dp"

                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="top"
                    android:hint="@string/problems"
                    android:paddingLeft="8dp"
                    android:paddingTop="11dp"
                    android:textColorHint="#b4b4b4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_emtion"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="34dp"
                    android:background="@mipmap/food_face"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="#f4f4f4" />

            <include
                android:id="@+id/emotion_show"

                layout="@layout/emotion_show_bord"

                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>